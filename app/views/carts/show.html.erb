<p id="notice"><%= notice %></p>
<div class="cart_title"><h2>Your Cart<h2></div>
<table>
		<tr>
			<th>Quantity</th>
			<th>Product Title</th>
			<th>Product Totle Price</th>
		</tr>
		
	<% @cart.line_items.each do |item|%>
		<tr>
			<td><%=item.quantity%></td>
			<td><%=item.product.title%></td>
			<td class="item_price"><%=number_to_currency(item.total_price)%></td>
			<td><%=button_to 'Delete Product',item,:method=>'delete',:confirm=>'Are you sure?'%></td>
		</tr>
	<%end%>
	
		<tr class="total_line">
			<td colspan="2">Total</td>
			<td class="total_cell"><%=number_to_currency(@cart.total_price)%></td>
		</tr>
	
</table>
<%=button_to 'Emptey cart',@cart,:method=>'delete',:confirm=>'Are you sure?'%>
